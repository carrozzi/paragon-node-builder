{
  "variables": {
    "vm_name": "pa-devnode",
    "iso_url": "http://mirror.clarkson.edu/centos/7.9.2009/isos/x86_64/CentOS-7-x86_64-Minimal-2009.iso",
    "iso_sha256": "07b94e6b1a0b0260b94c83d6bb76b26bf7a310dc78d7a9c7432809fb9bc6194a"

  },
  "builders": [
    {
      "name": "pa-devnode",
      "headless": false,
      "type": "vmware-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "vnc_disable_password": "true",
      "disk_size": 300000,
      "disk_additional_size": 50000,
      "format": "ova",


      "ovftool_options": ["--shaAlgorithm=SHA1","--eula@=eula.txt"],
      "http_directory": "http",
      "network": "nat",
      "guest_os_type": "centos7-64",
      "version": 11,
      "memory": 32768,
      "cpus": 8,
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_sha256`}}",
      "ssh_username": "root",
      "ssh_password": "Paragon1",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; sudo -S sh '/tmp/shutdown.sh'",
      "shutdown_timeout": "10m"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./files/",
      "timeout": "1h",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "timeout": "1h",
      "execute_command": "sudo -S sh '{{.Path}}'",
      "scripts": [
            "scripts/base.sh",
            "scripts/vmware.sh",
            "scripts/zerodisk.sh"
          ]
    }
  ]
}

